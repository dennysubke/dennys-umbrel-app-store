:2080 {
	encode gzip

	@api path /api*
	handle @api {
		reverse_proxy http://server:8000
	}

	handle {
		root * /usr/share/caddy
		try_files {path} /index.html
		file_server
	}

	header {
		Access-Control-Allow-Origin *
		Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
		Access-Control-Allow-Headers *
	}
}
